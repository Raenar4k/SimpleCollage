<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_marginTop="@dimen/activity_horizontal_margin">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/listitem_frame"
            android:layout_width="@dimen/card_height"
            android:layout_height="@dimen/card_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/listitem_image"
                android:layout_width="@dimen/card_height"
                android:layout_height="@dimen/card_height"
                android:adjustViewBounds="true"
                tools:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/listitem_checkbox"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/check_0_icon" />

        </FrameLayout>

        <TextView
            android:id="@+id/listitem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/listitem_frame"
            android:layout_toRightOf="@+id/listitem_frame"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="28sp"
            tools:text="Image title" />

        <TextView
            android:id="@+id/listitem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/listitem_frame"
            android:layout_toRightOf="@+id/listitem_frame"
            android:textColor="@color/colorBlack54Opacity"
            android:textSize="12sp"
            tools:text="20 jan 2015" />

        <TextView
            android:id="@+id/listitem_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/listitem_like_icon"
            android:layout_toStartOf="@+id/listitem_like_icon"
            android:textColor="@color/colorBlack87Opacity"
            android:textSize="12sp"
            tools:text="301" />

        <ImageView
            android:id="@+id/listitem_like_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/like_icon" />
    </RelativeLayout>
</android.support.v7.widget.CardView>